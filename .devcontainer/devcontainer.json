{
  "name": "Python 3",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "VARIANT": "3.14",
      "UV_VERSION": "0.9.13"
    }
  },
  // Add the IDs of extensions you want installed when the container is created.
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "redhat.vscode-yaml",
        "shardulm94.trailing-spaces",
        "tamasfe.even-better-toml",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "github.copilot.enable": {
          "*": false
        }
      }
    }
  },
  "initializeCommand": "test -f .env || touch .env",
  "runArgs": [
    "--env-file",
    ".env"
  ],
  "containerEnv": {
    "DISPLAY": "dummy",
    "PYTHONUNBUFFERED": "True",
    "UV_LINK_MODE": "copy"
  },
  "postCreateCommand": "uv sync --frozen && uv pip install -e .",
  "postStartCommand": "uv run pre-commit install",
  "remoteUser": "vscode",
  "features": {
    "github-cli": "latest"
  },
  "secrets": {
    "ADVENT_SESSION_COOKIE": {
      "description": "(Optional) Advent of Code Session Cookie, used for pulling down per-user puzzle inputs.",
      "documentationUrl": "https://adventofcode.com/"
    },
    "ANTHROPIC_API_KEY": {
      "description": "(Optional) Anthropic API key for extracting example inputs and answers.",
      "documentationUrl": "http://console.anthropic.com/"
    }
  }
}
